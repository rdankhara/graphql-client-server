type Query {
    bookById(id: ID!): Book
    allBooks: [Book]
}

type Mutation {
    createBook(title: String, author: String, pages: Int): Book
    updateBook(bookInput: BookInput!): Book
}

type Review {
    id: ID!
    comment: String
    rating: Int
}

type Book {
    id: ID!
    title: String
    author: String
    pages: Int
    reviews: [Review]
}

input BookInput {
    title: String
    author: String
    pages: Int
}
